<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 下拉刷新头部 -->
    <LinearLayout
        android:id="@+id/refreshHeader"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/refreshProgress"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/refreshText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下拉刷新"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- 可滚动内容区域 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/refreshHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 空表格标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="习惯统计表"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- 表格表头 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="习惯名称"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="坚持天数"
                    android:textStyle="bold"
                    android:gravity="end"/>
            </LinearLayout>

            <!-- 表格内容 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                tools:listitem="@layout/item_table_row"/>

            <!-- 柱状图标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="习惯坚持天数分布"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- 横向柱状图容器 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scrollbars="none">

                <view class="org.wit.yiding.AnalyticsActivity$HorizontalBarChartView"
                android:id="@+id/barChartView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="1000dp"/>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#F5F5F5"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Calendar"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Settings"
            android:textSize="12sp"
            android:textColor="#8A8A8A"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Analytics"
            android:textSize="12sp"
            android:textColor="#6200EE"
            android:gravity="center"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>